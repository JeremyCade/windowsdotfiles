[user]
	name = Jeremy Cade
	email = me@jeremycade.com
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[merge]
	tool = kdiff3
[credential]
	helper = !'C:\\Users\\Jeremy Cade\\AppData\\Roaming\\GitCredStore\\git-credential-winstore.exe'
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = cyan
	changed = green
	untracked = red bold
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
